<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:clipChildren="false" >

        <RelativeLayout
            android:id="@+id/fab_rl3"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_above="@+id/fab_rl2"
            android:layout_alignEnd="@+id/fab"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:text="Edit URL History"
                android:visibility="invisible" />
            <ImageButton
                android:id="@+id/fab_iv_3"
                style="@style/FloatingActionButton.Mini"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="@null"
                android:layout_toRightOf="@+id/tv_fab3"
                android:onClick="fabAction3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fab_rl2"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_above="@+id/fab_rl1"
            android:layout_alignEnd="@+id/fab"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Delete URL History"
                android:padding="6dp"
                android:visibility="invisible"
                />
            <ImageButton
                android:id="@+id/fab_iv_2"
                style="@style/FloatingActionButton.Mini"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_toRightOf="@id/tv_fab2"
                android:contentDescription="@null"
                android:onClick="fabAction2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fab_rl1"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_above="@+id/fab"
            android:layout_alignEnd="@+id/fab"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Clear URL Entry"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:visibility="invisible"
                />
            <ImageButton
                android:id="@+id/fab_iv_1"
                style="@style/FloatingActionButton.Mini"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_toRightOf="@id/tv_fab1"
                android:contentDescription="@null"
                android:onClick="fabAction1" />
        </RelativeLayout>

        <ImageButton
            android:id="@id/fab"
            style="@style/FloatingActionButton"
            android:src="@mipmap/baseline_add_white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:visibility="visible"
            android:layout_marginTop="8dp" />

    </RelativeLayout>
</merge>